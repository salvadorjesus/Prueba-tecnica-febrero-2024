<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="TestAptitudes.View.MainPage"
             x:Name="paginaPrincipal">
    <!-- Temporary removing the converter reference.
    xmlns:converters="clr-namespace:TestAptitudes.Converters"-->

    <StackLayout>

        <CollectionView ItemsSource="{Binding Usuarios}" Margin="20">

            <CollectionView.ItemTemplate>

                <DataTemplate>

                    <Grid ColumnDefinitions="*" HeightRequest="100">
  
                        <Label>
                            
                            <Label.Text>
                                
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="Nombre"/>
                                    <Binding Path="Apellido"/>
                                </MultiBinding>
                                
                            </Label.Text>
                            
                        </Label>
                        
                    </Grid>

                </DataTemplate>

            </CollectionView.ItemTemplate>

        </CollectionView>

        <Button Text="Add" Command="{Binding AddUserCmd}" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand"/>


    </StackLayout>

</ContentPage>

